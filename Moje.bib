	file = {PDF:C\:\\Users\\aleks\\Zotero\\storage\\CXYTE3FW\\Szabo et al. - 2024 - Exercise Addiction Inventory-3 (EAI-3) Psychometric properties of the Hungarian version.pdf:application/pdf},
