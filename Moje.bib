	file = {PDF:C\:\\Users\\aleks\\Zotero\\storage\\AIBZP9M8\\Köteles et al. - 2024 - Psychometric evaluation and validation of the Hungarian version of the Physical Activity Affect Scal.pdf:application/pdf},
